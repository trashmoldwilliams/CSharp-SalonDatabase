<h1>Hair Salon</h1>
<h2>Stylist: @Model["stylist"].GetName()</h2>
<hr />
@if (@Model["stylistClients"].Count != 0)
{
  <h4>Here are all the clients in this stylist:</h4>
  <ul>
    @foreach (var client in @Model["stylistClients"])
    {
      <li>@client.GetName()</li>
    }
  </ul>
}
<h4>Add a client to this stylist:</h4>
<form action='/stylist/add_client' method='post'>
  <input id='stylist-id' name='stylist-id' type='hidden' value='@Model["stylist"].GetId()'>
  <label for='client-id'>Select a client</label>
  <select id='client-id' name='client-id' type='text'>
    @foreach (var client in @Model["allClients"])
    {
      <option value='@client.GetId()'>@client.GetName()</option>
    }
  </select>
  <button type='submit'>Add</button>
</form>
<p><a href="/">Return to Main Page</a></p>
